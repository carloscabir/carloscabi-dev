---
import LanguageIcon from "../components/icons/Language.astro"

import ToggleTheme from "./ToggleTheme.astro"

import { EMAIL_CARLOS_CABI } from '@/consts'

const navItems = [
  {
    title: "Projects",
    label: "projects",
    url: "/#projects"
  },
  {
    title: "About me",
    label: "about-me",
    url: "/#about"
  },
  {
    title: "Contact",
    label: "contact",
    url: "/#contact"
  },
]

---

<header class="fixed top-0 right-0 left-0 z-10 flex flex-row flex-1 justify-around items-center container-sm py-5 bg-neutral-950">
  <div class="spacer"></div>

  <nav class="flex flex-row gap-x-10 opacity-80 hover:*:text-blue-300 *:transition-colors">
   {
    navItems.map(({title, label, url}) => (<a href={url} aria-label={label}> {title} </a>
    ))
   }
  </nav>
  
  
<div class="flex flex-row align-center justify-center sm:gap-x-10 gap-x-8 relative left-2 hover:*:text-blue-300 *:transition-colors"> 
  
    <ToggleTheme />

    <div>
      <button>
        <LanguageIcon />
      </button>
    </div>

  </div>
</header>